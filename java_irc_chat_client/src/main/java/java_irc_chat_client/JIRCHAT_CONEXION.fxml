<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="java_irc_chat_client.ConexionController"
            prefWidth="900" prefHeight="600">

    <children>
        <TabPane fx:id="tabPane"
                 tabClosingPolicy="UNAVAILABLE"
                 AnchorPane.topAnchor="0"
                 AnchorPane.leftAnchor="0"
                 AnchorPane.rightAnchor="0"
                 AnchorPane.bottomAnchor="0">

            <tabs>
                <!-- Pestaña 1: Conectar -->
                <Tab text="Conectar">
                    <content>
                        <VBox spacing="12" alignment="TOP_LEFT">
                            <padding>
                                <Insets top="12" right="12" bottom="12" left="12"/>
                            </padding>

                            <GridPane hgap="8" vgap="10"
                                      style="-fx-border-color: gray; -fx-border-width: 2; -fx-border-radius: 4;
                                             -fx-effect: innershadow(gaussian, rgba(0,0,0,0.35), 6, 0.0, 0, 2);">
                                <padding>
                                    <Insets top="10" right="10" bottom="10" left="10"/>
                                </padding>
                                <columnConstraints>
                                    <ColumnConstraints hgrow="ALWAYS" percentWidth="70"/>
                                    <ColumnConstraints hgrow="NEVER" minWidth="90" percentWidth="30"/>
                                </columnConstraints>

                                <Label text="Servidor de IRC:" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
                                <TextField fx:id="servidorField" promptText="ej. irc.example.net:6667"
                                           GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                                <Button fx:id="btnConectar" text="Conectar" onAction="#onConectar"
                                        GridPane.rowIndex="1" GridPane.columnIndex="1" maxWidth="Infinity"/>

                                <Label text="Nick (apodo):" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
                                <HBox spacing="8" alignment="CENTER_LEFT" GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="2">
                                    <TextField fx:id="nickField" promptText="Tu nick" HBox.hgrow="ALWAYS"/>
                                   
                                    
                                </HBox>

                                <CheckBox fx:id="chkMultiserver"
                                          text="Conectar en otra ventana (multiserver)"
                                          GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
                            </GridPane>

                            <Label text="Lista de servidores/canales:" style="-fx-font-weight: bold;"/>
                            <ScrollPane fitToWidth="true" fitToHeight="true" VBox.vgrow="ALWAYS">
                                <content>
                                    <TreeView fx:id="serverTreeView" prefWidth="400" prefHeight="300"/>
                                </content>
                            </ScrollPane>
                        </VBox>
                    </content>
                </Tab>

                <!-- Pestaña 2: Opciones -->
                <Tab text="Opciones">
                    <content>
                        <VBox spacing="10">
                            <padding>
                                <Insets top="12" right="12" bottom="12" left="12"/>
                            </padding>

                            <!-- Identd y Secuencia de Inicio -->
                            <VBox spacing="8" style="-fx-border-color: gray; -fx-border-width: 2; -fx-border-radius: 4;
                                                     -fx-effect: innershadow(gaussian, rgba(0,0,0,0.35), 6, 0.0, 0, 2);">
                                <padding>
                                    <Insets top="10" right="10" bottom="10" left="10"/>
                                </padding>
                                <Label text="Identd:"/>
                                <TextField fx:id="identdField" promptText="Identd"/>
                                <CheckBox fx:id="chkSecuenciaInicio" text="Secuencia de Inicio"/>
                                <Button fx:id="btnEditIdentd" text="Edit"/>
                            </VBox>

                            <!-- Tipo de Conexion -->
                            <VBox spacing="8" style="-fx-border-color: gray; -fx-border-width: 2; -fx-border-radius: 4;
                                                     -fx-effect: innershadow(gaussian, rgba(0,0,0,0.35), 6, 0.0, 0, 2);">
                                <padding>
                                    <Insets top="10" right="10" bottom="10" left="10"/>
                                </padding>
                                <Label text="Tipo de Conexion:"/>
                                <ComboBox fx:id="tipoConexionCombo" prefWidth="150"/>
                                 </VBox>
                            </VBox>
                        
                    </content>
                </Tab>

                <!-- Pestaña 3: Auto-conector -->
                <Tab text="Auto-conector">
                    <content>
                        <VBox spacing="10">
                            <padding>
                                <Insets top="12" right="12" bottom="12" left="12"/>
                            </padding>

                            <CheckBox fx:id="chkAutoConectar" text="Auto-conectar activo"/>

                            <TableView fx:id="autoConectarTable" prefHeight="300">
                                <columns>
                                    <TableColumn fx:id="colNumero" text="Nº" prefWidth="50"/>
                                    <TableColumn fx:id="colOn" text="On" prefWidth="50"/>
                                    <TableColumn fx:id="colServidor" text="Servidor" prefWidth="200"/>
                                    <TableColumn fx:id="colNick" text="Nick" prefWidth="150"/>
                                </columns>
                            </TableView>

                            <HBox spacing="8" alignment="CENTER_LEFT">
                                <Button fx:id="btnOnOff" text="On/Off"/>
                                <Button fx:id="btnMas" text="+"/>
                                <Button fx:id="btnMenos" text="-"/>
                            </HBox>

                            
                            <ScrollPane fitToWidth="true" fitToHeight="true" VBox.vgrow="ALWAYS">
                                <content>
                                    <TreeView fx:id="arbolDerecha" prefWidth="200" prefHeight="300"/>
                                </content>
                            </ScrollPane>
                        </VBox>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </children>
</AnchorPane>

