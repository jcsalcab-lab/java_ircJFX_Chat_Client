<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="java_irc_chat_client.ColaDeEnvios_Controller"
            prefWidth="600" prefHeight="600">

    <children>
        <!-- TableView de la cola de envíos -->
        <TableView fx:id="tableColaEnvios" prefHeight="250" prefWidth="680"
                   AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">
            <padding>
                <Insets top="5" right="5" bottom="5" left="5"/>
            </padding>
            <columns>
                <TableColumn fx:id="colNumero" text="#" prefWidth="50"/>
                <TableColumn fx:id="colNick" text="Nick" prefWidth="150"/>
                <TableColumn fx:id="colFichero" text="Fichero" prefWidth="350"/>
                <TableColumn fx:id="colHace" text="Hace" prefWidth="130"/>
            </columns>
        </TableView>

        <!-- TextFields a la izquierda debajo del TableView -->
        <VBox spacing="10" AnchorPane.topAnchor="270" AnchorPane.leftAnchor="10">
            <padding>
                <Insets top="5" right="5" bottom="5" left="5"/>
            </padding>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Máx. envíos"/>
                <TextField fx:id="txtMaxEnvios" text="4" prefWidth="50"/>
            </HBox>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Máx. por usuario"/>
                <TextField fx:id="txtMaxPorUsuario" text="2" prefWidth="50"/>
            </HBox>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Slots Cola"/>
                <TextField fx:id="txtSlotsCola" text="0" prefWidth="50"/>
            </HBox>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Slots por usuario"/>
                <TextField fx:id="txtSlotsPorUsuario" text="3" prefWidth="50"/>
            </HBox>
        </VBox>

        <!-- Botones a la derecha debajo del TableView con borde -->
        <VBox spacing="10" AnchorPane.topAnchor="270" AnchorPane.rightAnchor="10">
            <TitledPane text="Opciones" collapsible="false">
                <content>
                    <VBox spacing="10">
                        <padding>
                            <Insets top="10" right="10" bottom="10" left="10"/>
                        </padding>
                        <Button fx:id="btnSubir" text="Subir" prefWidth="120"/>
                        <Button fx:id="btnBajar" text="Bajar" prefWidth="120"/>
                        <Button fx:id="btnBorrarLinea" text="Borrar línea" prefWidth="120"/>
                        <Button fx:id="btnBorrarTodo" text="Borrar todo" prefWidth="120"/>
                    </VBox>
                </content>
            </TitledPane>

            <!-- TextField debajo de los botones -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <padding>
                    <Insets top="5" right="5" bottom="5" left="5"/>
                </padding>
                <Label text="Saltar cola si ocupa menos de (KB)"/>
                <TextField fx:id="txtSaltarCola" text="10" prefWidth="80"/>
            </HBox>
        </VBox>
    </children>
</AnchorPane>
