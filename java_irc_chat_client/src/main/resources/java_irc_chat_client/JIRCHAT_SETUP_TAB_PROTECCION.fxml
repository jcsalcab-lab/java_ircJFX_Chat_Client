                            <CheckBox fx:id="bloqueaTusnamisCheckBox" text="Bloquea Tusnamis"/>
                            <CheckBox fx:id="floodNetCheckBox" text="Flood Net de texto"/>
                        </VBox>
                    </TitledPane>
                </VBox>

                <VBox spacing="15" prefWidth="400">
                    <TitledPane text="Anti deop/ban/kick" expanded="true">
                        <VBox spacing="10">
                            <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
                            <CheckBox fx:id="activoDeopCheckBox" text="Activo"/>
                            <CheckBox fx:id="usarChanservCheckBox" text="Usar a Chanserv"/>
                        </VBox>
                    </TitledPane>

                    <TitledPane text="Excluir protecciones en:" expanded="true">
                        <VBox spacing="10">
                            <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <Label text="CTCP:"/>
                                <TextField fx:id="excluirCtcpTextField" text="SLOTS MP3 SOUND" prefWidth="200"/>
                            </HBox>
                            <Button text="InformaciÃ³n sobre protecciones" prefWidth="200"/>
                        </VBox>
                    </TitledPane>
                </VBox>
            </HBox>
        </ScrollPane>
    </Tab>

</TabPane>
