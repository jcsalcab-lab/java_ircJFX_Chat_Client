<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<ScrollPane xmlns:fx="http://javafx.com/fxml" fx:controller="java_irc_chat_client.TabGeneralController" fitToWidth="true">
    <VBox spacing="15">
        <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>

        <TitledPane text="Opciones generales" expanded="true">
            <VBox spacing="10">
                <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
                <CheckBox text="Invisible"/>
                <CheckBox text="Wall ops"/>
                <CheckBox text="Noticias"/>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Otros:"/>
                    <TextField fx:id="otrosTextField" prefWidth="200"/>
                </HBox>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Nick:"/>
                    <TextField fx:id="nickTextField" prefWidth="200"/>
                </HBox>
            </VBox>
        </TitledPane>

        <TitledPane text="Funciones adicionales" expanded="true">
            <VBox spacing="10">
                <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
                <CheckBox text="Medidor de Lag"/>
                <CheckBox text="Anti-idle"/>
                <CheckBox text="No responder CTCP's"/>
                <CheckBox text="Aviso al mencionarte"/>
                <CheckBox text="Relocalizado de nicks"/>
            </VBox>
        </TitledPane>

        <TitledPane text="Privados" expanded="true">
            <VBox spacing="10">
                <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
                <CheckBox text="Bloquear privados"/>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Mensaje de excusa:"/>
                    <TextField fx:id="mensajeExcusaTextField" text="no privados ahora porfavor necesitas la contraseña" prefWidth="250"/>
                </HBox>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Límite de privados:"/>
                    <TextField fx:id="limitePrivadosTextField" prefWidth="100"/>
                </HBox>
            </VBox>
        </TitledPane>

        <Button text="Ayuda" prefWidth="100"/>
    </VBox>
</ScrollPane>
