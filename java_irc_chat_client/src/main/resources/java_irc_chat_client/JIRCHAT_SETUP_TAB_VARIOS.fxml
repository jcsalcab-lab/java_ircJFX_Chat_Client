<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="java_irc_chat_client.VariosController"
            prefWidth="600" prefHeight="600">

    <children>
        <TabPane prefWidth="600" prefHeight="600" tabClosingPolicy="UNAVAILABLE" AnchorPane.topAnchor="0"
                 AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0">

            <!-- Subpestaña Varios -->
            <Tab text="Varios">
                <AnchorPane>
                    <children>
                        <VBox spacing="10" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10"
                              AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">
                            <padding>
                                <Insets top="10" right="10" bottom="10" left="10"/>
                            </padding>

                            <!-- En #canales -->
                            <TitledPane text="En #canales" expanded="true">
                                <content>
                                    <VBox spacing="10">
                                        <padding>
                                            <Insets top="10" right="10" bottom="10" left="10"/>
                                        </padding>

                                        <CheckBox fx:id="chkIntentaEntrarBan" text="Intenta entrar tras ban"/>
                                        <CheckBox fx:id="chkReentrarSalirTodos" text="Reentrar al salir todos"/>

                                        <HBox spacing="5" alignment="CENTER_LEFT">
                                            <TextField fx:id="txtContadorKicks" text="1" prefWidth="50"/>
                                            <CheckBox fx:id="chkUsarContadorKicks" text="Usar contador Kicks"/>
                                        </HBox>

                                        <HBox spacing="5" alignment="CENTER_LEFT">
                                            <Label text="Usando:"/>
                                            <TextField fx:id="txtUsando" text="&lt;nº&amp;n&gt;" prefWidth="150"/>
                                        </HBox>

                                        <HBox spacing="5" alignment="CENTER_LEFT">
                                            <Label text="Limite usuarios IAL:"/>
                                            <TextField fx:id="txtLimiteUsuariosIAL" text="49" prefWidth="80"/>
                                        </HBox>

                                        <Button fx:id="btnConfigurarCanales" text="Configurar Canales" prefWidth="200"/>
                                    </VBox>
                                </content>
                            </TitledPane>

                            <!-- Antivirus -->
                            <TitledPane text="Antivirus" expanded="true">
                                <content>
                                    <VBox spacing="10">
                                        <padding>
                                            <Insets top="10" right="10" bottom="10" left="10"/>
                                        </padding>

                                        <HBox spacing="5" alignment="CENTER_LEFT">
                                            <Label text="Antivirus:"/>
                                            <TextField fx:id="txtAntivirusPath" text="C:\\antivirus path\\" prefWidth="200"/>
                                            <Button fx:id="btnBrowseAntivirus" text="..."/>
                                        </HBox>

                                        <HBox spacing="5" alignment="CENTER_LEFT">
                                            <Label text="Sigue nick cada (segs.):"/>
                                            <TextField fx:id="txtSigueNick" text="30" prefWidth="80"/>
                                        </HBox>

                                        <CheckBox fx:id="chkMostrarConsejo" text="Mostrar consejo del día al iniciar"/>

                                        <HBox spacing="10">
                                            <Button fx:id="btnGuardarAntivirus" text="Guardar"/>
                                            <Button fx:id="btnRecuperarAntivirus" text="Recuperar"/>
                                        </HBox>
                                    </VBox>
                                </content>
                            </TitledPane>

                            <!-- Listas de usuarios -->
                            <TitledPane text="Listas de usuarios" expanded="true">
                                <content>
                                    <HBox spacing="10">
                                        <padding>
                                            <Insets top="10" right="10" bottom="10" left="10"/>
                                        </padding>

                                        <CheckBox fx:id="chkAutoOp" text="Auto Op"/>
                                        <CheckBox fx:id="chkProtegidos" text="Protegidos"/>
                                        <CheckBox fx:id="chkAlObtenerArroba" text="Al obtener @"/>
                                        <CheckBox fx:id="chkAutoVoz" text="Auto Voz"/>
                                        <CheckBox fx:id="chkAutoKick" text="Auto Kick"/>
                                        <Button fx:id="btnListas" text="Listas"/>
                                    </HBox>
                                </content>
                            </TitledPane>
                        </VBox>
                    </children>
                </AnchorPane>
            </Tab>

            <!-- Subpestaña Idioma -->
            <Tab text="Idioma">
                <AnchorPane>
                    <children>
                        <VBox spacing="10" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10"
                              AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">
                            <padding>
                                <Insets top="10" right="10" bottom="10" left="10"/>
                            </padding>

                            <HBox spacing="10">
                                <TableView fx:id="tblIdiomas" prefWidth="350">
                                    <columns>
                                        <TableColumn fx:id="colPrefIdioma" text="Pref idioma" prefWidth="150"/>
                                        <TableColumn fx:id="colIdioma" text="Idioma" prefWidth="200"/>
                                    </columns>
                                </TableView>

                                <VBox spacing="5" alignment="TOP_LEFT">
                                    <Label text="Info:"/>
                                    <Label fx:id="lblInfo" text="" style="-fx-background-color: transparent;"/>
                                </VBox>
                            </HBox>

                            <CheckBox fx:id="chkCambiarTema" text="Cambiar tema de texto si está disponible"/>
                            <Button fx:id="btnDescargarIdiomas" text="Descargar otros idiomas" prefWidth="200"/>
                        </VBox>
                    </children>
                </AnchorPane>
            </Tab>

            <!-- Subpestaña Comandos Personalizados -->
            <Tab text="Comandos">
                <AnchorPane>
                    <children>
                        <VBox spacing="10" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10"
                              AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">
                            <padding>
                                <Insets top="10" right="10" bottom="10" left="10"/>
                            </padding>

                            <TableView fx:id="tblComandos" prefHeight="250">
                                <columns>
                                    <TableColumn fx:id="colComando" text="Comando" prefWidth="200"/>
                                    <TableColumn fx:id="colDescripcion" text="Descripción" prefWidth="380"/>
                                </columns>
                            </TableView>

                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <CheckBox fx:id="chkActivo" text="Activo"/>
                                <CheckBox fx:id="chkOcultar" text="Ocultar Comando"/>
                                <Label text="Prefijo:"/>
                                <TextField fx:id="txtPrefijo" text="." prefWidth="50"/>
                                <Button fx:id="btnAgregar" text="+"/>
                                <Button fx:id="btnEliminar" text="-"/>
                                <Button fx:id="btnEditar" text="Editar"/>
                            </HBox>
                        </VBox>
                    </children>
                </AnchorPane>
            </Tab>

        </TabPane>
    </children>
</AnchorPane>
