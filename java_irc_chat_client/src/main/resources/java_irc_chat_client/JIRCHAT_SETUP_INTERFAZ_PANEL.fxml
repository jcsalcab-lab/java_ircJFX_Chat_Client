<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="java_irc_chat_client.InterfazPanelController"
      spacing="10">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <!-- Checkbox Activo -->
    <CheckBox text="Activo" />

    <!-- Cuadro Apartados -->
    <TitledPane text="Apartados" collapsible="false">
        <VBox spacing="5">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <ListView fx:id="listApartados" prefHeight="150" />
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button text="+" fx:id="btnAgregar"/>
                <Button text="-" fx:id="btnEliminar"/>
            </HBox>
        </VBox>
    </TitledPane>

</VBox>
