<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="java_irc_chat_client.InterfazCanalBarController"
            prefWidth="600" prefHeight="400">

    <!-- Checkbox Activa -->
    <CheckBox fx:id="chkActiva" text="Activa" layoutX="10" layoutY="10"/>

    <!-- Panel con borde y título -->
    <TitledPane text="Barra de comandos canal y privado" layoutX="10" layoutY="40" prefWidth="580">
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <!-- Pestañas -->
            <TabPane fx:id="tabPane" prefHeight="200" prefWidth="560">
                <tabs>
                    <Tab text="Privados">
                        <content>
                            <TableView fx:id="tablePrivados" prefHeight="180" prefWidth="540">
                                <columns>
                                    <TableColumn fx:id="colNumPriv" text="Número"/>
                                    <TableColumn fx:id="colComandoPriv" text="Comando"/>
                                </columns>
                            </TableView>
                        </content>
                    </Tab>
                    <Tab text="Canales">
                        <content>
                            <TableView fx:id="tableCanales" prefHeight="180" prefWidth="540">
                                <columns>
                                    <TableColumn fx:id="colNumCanal" text="Número"/>
                                    <TableColumn fx:id="colComandoCanal" text="Comando"/>
                                </columns>
                            </TableView>
                        </content>
                    </Tab>
                </tabs>
            </TabPane>

            <!-- Etiqueta y botón Predefinidos -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="(&amp;1 = nick, &amp;2 = canal, &amp;3 = activa)"/>
                <Button fx:id="btnPredefinidos" text="Predefinidos"/>
            </HBox>

            <!-- TextFields con etiquetas -->
            <GridPane hgap="10" vgap="10">
                <Label text="Descripcion:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtDescripcion" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Comando:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="txtComando" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            </GridPane>

            <!-- Botones +, -, Actualizar -->
            <HBox spacing="10">
                <Button fx:id="btnAgregar" text="+"/>
                <Button fx:id="btnEliminar" text="-"/>
                <Button fx:id="btnActualizar" text="Actualizar"/>
            </HBox>
        </VBox>
    </TitledPane>

</AnchorPane>
