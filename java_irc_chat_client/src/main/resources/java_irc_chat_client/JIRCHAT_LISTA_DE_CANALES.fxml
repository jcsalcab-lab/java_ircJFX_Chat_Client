<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="java_irc_chat_client.CanalesListController"
      spacing="10"
      prefWidth="1500" prefHeight="800"
      style="-fx-background-color: beige; -fx-padding: 10;">

    <!-- Barra de búsqueda -->
    <HBox spacing="10">
        <Label text="Nombre de canal:"/>
        <TextField fx:id="txtBusqueda" promptText="Escribe el nombre del canal" HBox.hgrow="ALWAYS"/>
        <Button fx:id="btnBuscar">
            <graphic>
                <ImageView fitHeight="24" fitWidth="24">
                    <image>
                        <Image url="@icons/icons8-busqueda-50.png"/>
                    </image>
                </ImageView>
            </graphic>
            <text>Buscar</text>
        </Button>
    </HBox>

    <Label text="Listado de Canales" style="-fx-font-weight: bold; -fx-font-size: 16;"/>

    <TableView fx:id="canalesTable" style="-fx-background-color: beige;" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colCanal" text="Nombre Canal" prefWidth="100"/>
            <TableColumn fx:id="colUsuarios" text="Usuarios" prefWidth="50"/>
            <TableColumn fx:id="colDescripcion" text="Descripción" prefWidth="1050"/>
        </columns>
    </TableView>

</VBox>
