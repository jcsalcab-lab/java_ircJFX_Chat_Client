<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="java_irc_chat_client.InterfazVariosController"
            prefWidth="500" prefHeight="300">

    <children>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <!-- Cuadro con borde relieve hacia dentro -->
            <TitledPane text="Colores lista de nicks" expanded="true">
                <content>
                    <BorderPane>
                        <center>
                            <ListView fx:id="listViewColores"
                                      prefWidth="200" prefHeight="200"/>
                        </center>
                        <right>
                            <VBox spacing="8">
                                <padding>
                                    <Insets top="10" right="10" bottom="10" left="10"/>
                                </padding>
                                <children>
                                    <CheckBox fx:id="chkAnimacionCerrar"
                                              text="Animación al cerrar ventana"/>
                                    <CheckBox fx:id="chkMostrarTextura"
                                              text="Mostrar textura en diálogos (si la skin la incluye)"/>
                                </children>
                            </VBox>
                        </right>
                    </BorderPane>
                </content>
            </TitledPane>

            <!-- Campo de redondeo -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <children>
                     <Label text="Redondeo GUI (0 = recto &lt;-&gt; 15 = redondeado)"/>
                    <TextField fx:id="txtRedondeo" text="8" prefWidth="50"/>
                </children>
            </HBox>
        </VBox>
    </children>
</AnchorPane>
