<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="java_irc_chat_client.VariosComandosPersonalizadosController"
            prefWidth="600" prefHeight="400">

    <children>
        <VBox spacing="10" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">
            <padding>
                <Insets top="0" right="0" bottom="0" left="0"/>
            </padding>

            <!-- ListView con dos columnas -->
            <TableView fx:id="tblComandos" prefHeight="250">
                <columns>
                    <TableColumn fx:id="colComando" text="Comando" prefWidth="200"/>
                    <TableColumn fx:id="colDescripcion" text="DescripciÃ³n" prefWidth="380"/>
                </columns>
            </TableView>

            <!-- Controles debajo de la tabla -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>

                <CheckBox fx:id="chkActivo" text="Activo"/>
                <CheckBox fx:id="chkOcultar" text="Ocultar Comando"/>

                <Label text="Prefijo:"/>
                <TextField fx:id="txtPrefijo" text="." prefWidth="50"/>

                <Button fx:id="btnAgregar" text="+"/>
                <Button fx:id="btnEliminar" text="-"/>
                <Button fx:id="btnEditar" text="Editar"/>
            </HBox>
        </VBox>
    </children>
</AnchorPane>
