<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="java_irc_chat_client.RedesAutoEntrarController"
            prefWidth="800" prefHeight="600">

    <children>
        <VBox spacing="10" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">
            <padding>
                <Insets top="0" right="0" bottom="0" left="0"/>
            </padding>

            <!-- Combo de selecciÃ³n de redes -->
            <Label text="Red"/>
            <ComboBox fx:id="comboRedes" prefWidth="300"/>

            <!-- TitledPane Auto-entrada en canales -->
            <TitledPane text="Auto-entrada en canales" expanded="true">
                <content>
                    <BorderPane prefHeight="400" prefWidth="780">
                        <padding>
                            <Insets top="10" right="10" bottom="10" left="10"/>
                        </padding>

                        <!-- Centro: VBox con CheckBox y TextField -->
                        <center>
                            <VBox spacing="10">
                                <CheckBox fx:id="chkAutoEntrar" text="Auto-entrar"/>
                                <HBox spacing="5" alignment="CENTER_LEFT">
                                    <Label text="Retardo (segs.)"/>
                                    <TextField fx:id="txtRetardo" prefWidth="100"/>
                                </HBox>
                            </VBox>
                        </center>

                        <!-- Derecha: ListView y botones -->
                        <right>
                            <VBox spacing="5">
                                <ListView fx:id="listViewCanales" prefWidth="200" prefHeight="300"/>
                                <HBox spacing="5">
                                    <Button fx:id="btnAgregar" text="+"/>
                                    <Button fx:id="btnQuitar" text="-"/>
                                    <Button fx:id="btnEntrarAhora" text="Entrar ahora"/>
                                </HBox>
                            </VBox>
                        </right>

                    </BorderPane>
                </content>
            </TitledPane>
        </VBox>
    </children>
</AnchorPane>
