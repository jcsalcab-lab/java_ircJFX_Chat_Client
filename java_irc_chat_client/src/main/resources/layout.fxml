<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Pane?>

<BorderPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="java_irc_chat_client.MainController" >

    <!-- ZONA SUPERIOR CON MENU Y TOOLBAR -->
    <top>
        <VBox fillWidth="true" maxHeight="-1" prefHeight="-1" spacing="0" style="-fx-border-color: red; -fx-border-width: 2;">
            <fx:include source="menu.fxml" />
            <fx:include fx:id="toolbarInclude" source="toolbar.fxml" />
        </VBox>
    </top>

    <!-- ZONA INFERIOR -->
    <bottom>
        <Pane prefHeight="50" style="-fx-border-color: red; -fx-border-width: 2;" />
    </bottom>

    <!-- ZONA IZQUIERDA -->
    <left>
        <Pane prefWidth="100" style="-fx-border-color: red; -fx-border-width: 2;" />
    </left>

    <!-- ZONA DERECHA -->
    <right>
        <Pane prefWidth="100" style="-fx-border-color: red; -fx-border-width: 2;" />
    </right>

    <!-- ZONA CENTRAL PARA EL CHAT -->
    <center>
        <StackPane fx:id="chatPane" style="-fx-border-color: red; -fx-border-width: 2;" />
    </center>

</BorderPane>
